@model WebApp.Models.ProductViewModel;
@if (TempData["AlertMessage"] is not null)
{
    <div class="alert alert-success">
        <strong> Success !</strong>@TempData["AlertMessage"]
    </div>
    
}

<h1>
    Add Product
</h1>
<form method="post">
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>
    <div class="mt-3">
        <label class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Description" />
    </div>
    <div class="mt-3">
        <label asp-for="CreationDate" class="control-label"></label>
        <input asp-for="CreationDate" class="form-control" />
        <span asp-validation-for="CreationDate" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <label class="form-label">Quantity</label>
        <input type="text" class="form-control" asp-for="Quantity" />
    </div>
    <div class="mt-3">
        <label class="form-label">Price</label>
        <input type="text" class="form-control" asp-for="Price" />
    </div>
    <div class="mt-3">
        <label for="Category">Category</label>
        <select class="form-control" asp-for="Category" asp-items="@Model.CategoryViewModelList">
        </select>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>