@model WebApp.Models.ProductViewModel
<h1>
    Edit Product
</h1> 
@if (Model is null)
{
    <p>No such product found.</p>
}
else
{
    <form method="post">
        <input type="hidden" asp-for="Id" />
        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>
        <div class="mt-3">
            <label class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="Description" />
        </div>
        <div class="mt-3">
            <label asp-for="CreationDate" class="control-label"></label>
            <input asp-for="CreationDate" class="form-control" />
            <span asp-validation-for="CreationDate" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label class="form-label">Quantity</label>
            <input type="text" class="form-control" asp-for="Quantity" />
        </div>
        <div class="mt-3">
            <label class="form-label">Price</label>
            <input type="text" class="form-control" asp-for="Price" />
        </div>
        <div class="mt-3">
            <label for="category">Category</label>
            <select class="form-control" asp-for="CategoryId" asp-items="Model.CategoryViewModelList" selectedValue>
            </select>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete"
                    asp-controller="Products">
                Delete
            </button>
        </div>
    </form>
}
