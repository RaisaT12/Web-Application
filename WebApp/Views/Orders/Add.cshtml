@model WebApp.Models.OrderViewModel;
<h1>Add Orders</h1>
<form method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <label class="mt-3">Address</label>
        <input type="text" class="form-control" asp-for="Address"/>
    </div>
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>
    <div class="mt-3">
        <label class="form-label">Contact Number</label>
        <input type="tel" class="form-control" asp-for="Contact_Number" />
    </div>
    <div class="mt-3">
        <label asp-for="Order_Placed" class="control-label"></label>
        <input type="date" asp-for="Order_Placed" class="form-control datepicker" />
        <span asp-validation-for="Order_Placed" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <label for="Product">Product</label>
        <select class="form-control" asp-for="ProductId" asp-items="@Model.ProductViewModelList">
        </select>
    </div>
    <div class="mt-3">
        <label class="form-label">Quantity</label>
        <input type="int" class="form-control" asp-for="Quantity" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
